<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="91dp"
        android:padding="10dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/Red"
            android:layout_width="300dp"
            android:layout_height="91dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="67dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:background="#FF0000"
                android:orientation="vertical"
                />

            <TextView
                android:id="@+id/textred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="10dp"
                android:text="Red"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descriptionred"
                android:layout_width="205dp"
                android:textStyle="bold"
                android:textColor="#a9a9a9"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-light"
                android:text="Red is the color at the end of the visible spectrum of light, next to orange and opposite..." />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Purple"
            android:layout_width="289dp"
            android:layout_height="91dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="67dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:background="#BF0FDD"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/textpurple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="10dp"
                android:text="Purple"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descriptionpurple"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-light"
                android:text="Purple refers to any of a variety of colors with hue between red and blue..."
                android:textColor="#a9a9a9"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Yellow"
